@{
    ViewData["Title"] = "Index";
}
@model List<CourseViewModel>


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Courses</h5>

                <a asp-controller="Courses" asp-action="Create" class="btn btn-primary mb-3">Create a Course</a>

                @if (Model.Any())
                {
                    <table class="table table-striped table-bordered">

                        <thead>
                            <tr>
                                <th>Picture</th>
                                <th>Course name</th>
                                <th>Price</th>
                                <th>Duration</th>
                                <th>Category</th>
                                <th>Operations</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in Model)
                            {
                                <tr>
                                    <td></td>
                                    <td>@course.Name</td>
                                    <td>@course.Price</td>
                                    <td>@course.Feature.Duration</td>
                                    <td>@course.Category.Name</td>
                                    <td>
                                        <a asp-controller="Courses" asp-action="Update" asp-route-id="@course.Id" class="btn btn-success btn-sm">
                                            Update
                                        </a>
                                        <a asp-controller="Courses" asp-action="Delete" asp-route-id="@course.Id" class="btn btn-danger btn-sm">
                                            Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                }
                else
                {
                    <div class="alert alert-info">
                        No registered courses.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

